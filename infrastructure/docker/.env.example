# =============================================================================
# Webrana AI Proxy - Environment Variables
# Copy this file to .env and fill in your values
# =============================================================================

# -----------------------------------------------------------------------------
# Database Configuration
# -----------------------------------------------------------------------------
POSTGRES_USER=webrana
POSTGRES_PASSWORD=CHANGE_ME_USE_STRONG_PASSWORD
POSTGRES_DB=webrana

# -----------------------------------------------------------------------------
# Application Secrets
# Generate with: openssl rand -base64 32
# -----------------------------------------------------------------------------
MASTER_ENCRYPTION_KEY=CHANGE_ME_GENERATE_WITH_OPENSSL

# Generate with: openssl rand -base64 64
JWT_SECRET=CHANGE_ME_GENERATE_WITH_OPENSSL

# -----------------------------------------------------------------------------
# Application Settings
# -----------------------------------------------------------------------------
RUST_LOG=info

# API URL (change to your domain)
API_URL=https://api.webrana.id

# Docker image tag
TAG=latest

# -----------------------------------------------------------------------------
# Optional: Midtrans Payment (Week 3)
# -----------------------------------------------------------------------------
# MIDTRANS_SERVER_KEY=
# MIDTRANS_CLIENT_KEY=
# MIDTRANS_IS_PRODUCTION=false
