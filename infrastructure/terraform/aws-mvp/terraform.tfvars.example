# =============================================================================
# Webrana AI Proxy - Terraform Variables
# Copy this file to terraform.tfvars and fill in your values
# =============================================================================

# AWS Region (Singapore for Indonesian users)
aws_region = "ap-southeast-1"

# Environment
environment = "production"

# EC2 Instance Type
# t3.micro  = $8/month  (1 vCPU, 1GB RAM) - Dev only
# t3.small  = $15/month (2 vCPU, 2GB RAM) - Light production
# t3.medium = $30/month (2 vCPU, 4GB RAM) - Recommended for MVP
instance_type = "t3.medium"

# Your domain name
domain_name = "webrana.id"

# SSH Key Pair name (must exist in AWS)
# Create one in AWS Console: EC2 > Key Pairs > Create key pair
ssh_key_name = "webrana-key"

# =============================================================================
# SECURITY SETTINGS - IMPORTANT!
# =============================================================================

# Admin IP for SSH access (CIDR format)
# Find your IP: curl ifconfig.me
# NEVER leave as 0.0.0.0/0 in production!
admin_cidr = "YOUR_IP_ADDRESS/32"  # e.g., "203.0.113.50/32"

# Enable CloudWatch monitoring alarms
enable_monitoring = true
