{
  "enabled": true,
  "name": "UI/UX Design Generator",
  "description": "Acts as Senior UI/UX Designer when component or styling files are created or edited",
  "version": "1",
  "when": {
    "type": "fileEdited",
    "patterns": [
      "frontend/src/components/**/*.tsx",
      "frontend/src/app/**/*.tsx",
      "**/*.css"
    ]
  },
  "then": {
